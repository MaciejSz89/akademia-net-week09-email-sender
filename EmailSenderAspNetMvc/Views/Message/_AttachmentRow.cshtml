@using System.Web;

<div class="row attachment">
    <div class="col-10">
        @Html.TextBox("Attachments[" + ((int)ViewBag.Index).ToString() + "]",
                      "",
                      new
                      {
                          @class = "form-control mb-2",
                          type = "file"
                      })
        @Html.ValidationMessage("Attachments[" + ((int)ViewBag.Index).ToString() + "]",
                                    null,
                                    new { @class = "text-danger" })
    </div>
    <div class="col-2">
        <button type="button"
                class="btn btn-danger"
                onclick='deleteAttachment($(this).parents(".attachment"))'>
            Usuń
        </button>
    </div>
</div>

