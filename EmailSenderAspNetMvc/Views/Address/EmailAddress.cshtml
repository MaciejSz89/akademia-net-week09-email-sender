@using EmailSenderAspNetMvc.Models.ViewModels

@model EditEmailAddressViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h2 class="mb-2">@Model.Heading</h2>

<div class="row">
    <div class="col-lg-6">
        @using (Html.BeginForm("EmailAddress", "Address"))
        {
            @Html.AntiForgeryToken()

            if (Model.EmailAddress.Id == 0)
            {
                <p class="alert alert-info mt-4 mb-4">
                    Pola nazwa oraz adres są <strong>wymagane</strong>
                </p>
            }

            @Html.HiddenFor(x => x.EmailAddress.Id)
            @Html.HiddenFor(x => x.EmailAddress.UserId)
            @Html.HiddenFor(x => x.EmailAddress.IsDefined)

            <div class="form-group mb-2">
                @Html.LabelFor(x => x.EmailAddress.DisplayName,
                               new { @class = "mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.EmailAddress.DisplayName,
                                     new
                                          {
                                              @class = "form-control",
                                           autofocus = "autofocus"
                                          })
                    @Html.ValidationMessageFor(x => x.EmailAddress.DisplayName,
                                                "",
                                                new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-2">
                @Html.LabelFor(x => x.EmailAddress.Address,
                                new { @class = "mb-1" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.EmailAddress.Address,
                                        new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.EmailAddress.Address,
                                                "",
                                                new { @class = "text-danger" })
                </div>
            </div>

            <button class="btn btn-primary btn-lg mt-2 mb-5" type="submit">
                Zapisz
            </button>

        }
    </div>

</div>